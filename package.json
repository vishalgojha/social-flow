{
  "name": "@vishalgojha/social-cli",
  "version": "0.2.13",
  "description": "A CLI for social API operations (Facebook, Instagram, WhatsApp).",
  "main": "dist-legacy/index.js",
  "bin": {
    "social": "dist-legacy/bin/social.js"
  },
  "scripts": {
    "lint": "eslint --max-warnings=0 --no-error-on-unmatched-pattern bin commands lib test scripts",
    "copy:legacy-assets": "node dist-legacy/scripts/copy-legacy-assets.js",
    "clean:legacy": "node -e \"require('node:fs').rmSync('dist-legacy',{recursive:true,force:true})\"",
    "clean:runtime": "node -e \"require('node:fs').rmSync('dist-runtime',{recursive:true,force:true})\"",
    "clean:social": "node -e \"require('node:fs').rmSync('dist-social',{recursive:true,force:true})\"",
    "clean:tooling": "node -e \"require('node:fs').rmSync('.tmp-ts-run',{recursive:true,force:true})\"",
    "clean": "npm run clean:legacy && npm run clean:runtime && npm run clean:social && npm run clean:tooling",
    "build": "npm run clean && npm run build:legacy-ts && npm run build:runtime-ts && npm run build:social-ts",
    "build:legacy-ts": "npm run clean:legacy && tsc -p tsconfig.legacy.json && npm run copy:legacy-assets",
    "build:runtime-ts": "npm run clean:runtime && tsc -p tsconfig.runtime.json",
    "build:tooling-ts": "npm run clean:tooling && tsc -p tsconfig.tooling.json",
    "typecheck:legacy-entrypoints": "tsc -p tsconfig.legacy.typecheck.json",
    "test": "npm run build:legacy-ts && node dist-legacy/test/run.js",
    "build:social-ts": "npm run clean:social && tsc -p tsconfig.social.json",
    "test:social-ts": "npm run build:social-ts && node dist-social/tests/intent-parser.test.js",
    "smoke:release": "npm run build:legacy-ts && node dist-legacy/scripts/release-smoke.js",
    "ts:migration-guard": "npm run build:legacy-ts && node dist-legacy/scripts/ts-migration-guard.js",
    "quality:check": "npm run ts:migration-guard && npm run build:runtime-ts && npm run lint && npm run typecheck:legacy-entrypoints && npm test && npm run test:social-ts && npm run smoke:release",
    "start": "node bin/social.js gateway",
    "prepack": "npm run build:legacy-ts && npm run build:runtime-ts && npm run build:social-ts",
    "social:dev": "tsx cli/index.ts",
    "dev": "tsx cli/index.ts"
  },
  "keywords": [
    "social",
    "facebook",
    "instagram",
    "whatsapp",
    "graph-api",
    "cli"
  ],
  "author": "Chaos Craft Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vishalgojha/social-CLI.git"
  },
  "bugs": {
    "url": "https://github.com/vishalgojha/social-CLI/issues"
  },
  "homepage": "https://github.com/vishalgojha/social-CLI#readme",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist-legacy/",
    "dist-runtime/",
    "docs/",
    "tools/",
    "index.ts",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.3.1",
    "form-data": "^4.0.5",
    "ink": "^4.4.1",
    "ink-text-input": "^5.0.1",
    "inquirer": "^8.2.5",
    "ora": "^5.4.1",
    "ws": "^8.18.0"
  },
  "overrides": {
    "ajv": "^6.14.0",
    "minimatch": "^3.1.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "eslint": "^8.54.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": "25.x"
  }
}
